.event
	position relative
	margin 0 auto 63px
	width 770px
	&__date
		position absolute
		top 0
		left -48px
		transform translate(-100%)
		font-size 1.5rem
		line-height 1.5
		font-family "Helios"
		font-weight 900
		color rgba(0,0,0,.5)
		background #D6D2CD
		padding-bottom 5px
		@media only screen and (max-width 1199px)
			left -30px
	&__title
		margin-bottom 23px
		font-weight normal
		font-size 1.5rem
		line-height 1.5
		font-family "Helios"
	&__img
		display flex
		justify-content center
		align-items center
		margin-bottom 12px
		height 344px
		border-radius 4px
		box-shadow 0 2px 3px rgba(0,0,0,0.1)
		background #fff
		background-repeat no-repeat
		background-position right top
	&__text
		font-size 1.125rem
		line-height 1.5
		&_cursive
			font-family "SangBleu Sunrise"
			font-style italic
		p
			margin-bottom 7px