.event
	position relative
	margin 0 auto 63px
	width 770px
	&__date
		position absolute
		top 0
		left -48px
		transform translate(-100%)
		font-size 1.5rem
		line-height 1.5
		font-family "Helios"
		font-weight 900
		color rgba(0,0,0,.5)
		background #D6D2CD
		padding-bottom 5px
		@media only screen and (max-width 1199px)
			left -30px
	&__title
		margin-bottom 23px
		font-weight normal
		font-size 1.5rem
		line-height 1.5
		font-family "Helios"
	&__text
		font-size 1.125rem
		line-height 1.5
		p
			margin-bottom 7px