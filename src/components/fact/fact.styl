.fact
	position relative
	height 100vh
	min-height 650px
	padding 64px 0
	color #fff
	font-family "Cisco Sans", sans-serif
	background url("/images/Lobachevskiy-Kliffod/fact-bg_1.png") left 260px no-repeat, url("/images/Lobachevskiy-Kliffod/fact-bg_2.png") right 230px no-repeat, #1B1A1A
	background-size 13%, 17%, auto
	&__nav-link
		position absolute
		top 36px
		right 36px
		display flex
		align-items center
		&_circle
			display block
			position relative
			width 40px
			height 40px
			border-radius 50%
			background #fff
			transition .5s ease-in-out all
			&:hover
				opacity .7
			&::before,
			&::after
				display inline-block
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%)
				content ""
				background #000
			&::before
				width 14px
				height 1px
			&::after
				width 1px
				height 14px
	&__h2
		margin-bottom 50px
		font-family "Helios"
		font-weight 900
		font-size 2.5rem
		line-height 1
	&__container
		height 100%
	&__wrap
		height calc(100% - 130px)
		display flex
		justify-content center
		align-items center
	&__block
		position relative
		width 770px
	&__date
		position absolute
		top 0
		left -30px
		transform translate(-100%)
		font-size 1.5rem
		line-height 1.5
		font-family "Helios"
		font-weight 900
		color rgba(255,255,255,.5)
		text-align right
	&__title
		margin-bottom 16px
		font-weight normal
		font-size 1.5rem
		line-height 1.5
		font-family "Helios"
	&__text
		font-size 1.5rem
		line-height 1.5
		p
			margin-bottom 12px
