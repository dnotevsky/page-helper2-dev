.article
  position relative
  display block
  margin 0 auto 64px
  width 770px
  padding 28px 30px
  background #FFFFFF
  border-radius 4px
  box-shadow 0 2px 3px rgba(0,0,0,0.1)
  cursor pointer
  &:hover
    .article__title,
    .article__title_author
      color #E34F2D
    .article__read
      color #000
      &::after
        filter brightness(0)
  @media only screen and (max-width 1023px)
    width 600px
  @media only screen and (max-width 767px)
    width 100%
    margin-top 120px
    padding 20px 25px
  @media only screen and (max-width 480px)
    margin-top 0
    width calc(100% + 32px)
    margin-left -16px
  &::before
    position absolute
    left -102px
    top -13px
    content ""
    width 52px
    height 52px
    border 10px solid #D6D2CD
    border-top-width 3px
    background url("/images/icons/article.svg") center center no-repeat, #D6D2CD
    @media only screen and (max-width 1199px)
      left -8vw
    @media only screen and (max-width 1023px)
      left -65px
      border-right-width 0
    @media only screen and (max-width 767px)
      left 0
      top -55px
      border-bottom-width 0
    @media only screen and (max-width 480px)
      display none
  &__category
    display inline-block
    margin-bottom 12px
    letter-spacing 3px
    font-size .75rem
    color rgba(0,0,0,.6)
    line-height 1.33
    text-transform uppercase
  &__title
    margin-bottom 4px
    font-size 2.25rem
    line-height 1.16
    font-weight bold
    transition .3s ease-in-out
    @media only screen and (max-width 767px)
      font-size 1.8rem
      margin-bottom 7px
    @media only screen and (max-width 425px)
      font-size 1.4rem
    &_author
      display inline-block
      font-weight normal
      color rgba(0,0,0,.5)
      transition .3s ease-in-out
  &__description
    margin-bottom 28px
    font-family "Helios"
    color rgba(0,0,0,.6)
    font-size 1.5rem
    line-height 1.5
    @media only screen and (max-width 767px)
      font-size 1.2rem
      margin-bottom 25px
    @media only screen and (max-width 425px)
      font-size 1rem
  &__read
    position relative
    color #E34F2D
    font-size 1rem
    line-height 1.25
    transition .3s ease-in-out
    @media only screen and (max-width 767px)
      font-size .9rem
    &-text
      font-weight bold
    &-time
      display inline-block
      margin-left 4px
    &::after
      content ""
      width 11px
      height 15px
      display inline-block
      margin-left 10px
      top 2px
      position relative
      background url("/images/icons/orange-arrow.svg") center center no-repeat
      transform rotate(-136deg)
      transition .3s ease-in-out
