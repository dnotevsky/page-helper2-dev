.video
  position relative
  margin 0 auto 59px
  width 770px
  padding-top 25px
  background #FFFFFF
  border-radius 4px
  box-shadow 0 2px 3px rgba(0,0,0,0.1)
  @media only screen and (max-width 1023px)
    width 600px
  @media only screen and (max-width 767px)
    width 100%
    margin-top 120px
    padding-top 15px
  @media only screen and (max-width 480px)
    margin-top 0
    width calc(100% + 32px)
    margin-left -16px
    padding-top 24px
    margin-bottom 64px
  &::before
    position absolute
    left -102px
    top -13px
    content ""
    width 52px
    height 48px
    border 10px solid #D6D2CD
    border-top-width 3px
    background url("/images/video.png") center center no-repeat, #D6D2CD
    @media only screen and (max-width 1199px)
      left -8vw
    @media only screen and (max-width 1023px)
      border-right-width 0
      left -65px
    @media only screen and (max-width 767px)
      left 0
      top -61px
    @media only screen and (max-width 480px)
      display none
  &__category
    display inline-block
    margin-bottom 6px
    padding-left 30px
    letter-spacing 3px
    font-size .75rem
    color rgba(0,0,0,.6)
    line-height 1.33
    text-transform uppercase
    @media only screen and (max-width 767px)
      padding-left 20px
      font-size .65rem
      margin-bottom 5px
    @media only screen and (max-width 480px)
      font-size .75rem
      margin-bottom 6px
      padding 0 16px
  &__title
    margin-bottom 24px
    padding-left 27px
    padding-right 27px
    font-size 1.5rem
    line-height 1.33
    font-weight normal
    @media only screen and (max-width 1023px)
      margin-bottom 5px
      padding-right 20px
    @media only screen and (max-width 767px)
      padding-left 20px
      margin-bottom 10px
      font-size 1.3rem
    @media only screen and (max-width 480px)
      font-size 1.5rem
      line-height 1.33
      padding 0 16px
      margin-bottom 16px
    &_author
      color rgba(0,0,0,.6)
  &__iframe
    position relative
    height 0
    padding 0
    padding-bottom 56.25%
    iframe
      position absolute
      left 0
      top 0
      width 100%
      height 100%
  &__bottom
    display flex
    justify-content space-between
    align-items center
    padding 17px 30px
    @media only screen and (max-width 1023px)
      padding-top 0
    @media only screen and (max-width 767px)
      padding 10px 20px
      flex-wrap wrap
    @media only screen and (max-width 480px)
      padding 16px
      position relative
      &::after
        content ""
        width 100%
        height 1px
        background rgba(0,0,0,.1)
        position absolute
        left 0
        top 50%
    &-share
      color rgba(0, 0, 0, 0.6)
      font-size 1rem
      text-decoration none
      line-height 1.5
      @media only screen and (max-width 767px)
        margin-bottom 8px
      @media only screen and (max-width 480px)
        margin-bottom 32px
      &::before
        margin-right 8px
        content ""
        position relative
        display inline-block
        width 16px
        height 14px
        top 1px
        background url("/images/video-sprite.png") -10px -10px no-repeat
    &-text
      color rgba(0, 0, 0, 0.6)
      font-size 1rem
      text-decoration none
      line-height 1.5
      &::before
        margin-right 10px
        content ""
        position relative
        display inline-block
        width 10px
        height 10px
        background url("/images/video-sprite.png") -46px -10px no-repeat
        @media only screen and (max-width 480px)
          transform rotate(-45deg)
