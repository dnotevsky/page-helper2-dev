.about
	height 100vh
	min-height 670px
	background #010101
	color #fff
	font-family "SangBleu Sunrise", sans-serif
	&__container
		padding-top 57px
		height 100%
		display flex
		flex-direction column
		justify-content center
	&__text-block
		column-count 2
		column-gap 60px
	&__text
		font-size 1.5rem
		line-height 1.5
		letter-spacing 1px	
		&:first-child
			max-width 530px
		&:nth-last-child(2)
			position relative
			&::after
				content ""
				position relative
				display inline-block
				right -10px
				width 16px
				height 16px
				background url("/images/postnauka.png") center center no-repeat
				background-size 100%
		&_first-letter
			float left
			display block
			margin-bottom -15px
			margin-right 18px
			position relative
			top 3px
			right -2px
			font-size 4.375rem
			line-height 1.17
			font-family "Cisco Sans"
			font-weight 900
		&_cursive
			font-style italic
	&__share
		margin-top 28px
		&-text
			display block
			margin-bottom 10px
			font-size 1.25rem
			font-family "Cisco Sans"
			color rgba(255,255,255,.6)
		&-links
			display flex
			width 165px
			justify-content space-between
			align-items center
			> a
				width 32px
				height 32px
				border-radius 9px
				position relative
				display block
				transition .5s ease-in-out all
				&::after
					display inline-block
					content ""
					position absolute
					top 50%
					left 50%
					transform translate(-50%, -50%)
					background-image url("/images/main-sprite.png")
					background-repeat no-repeat
			&_vk
				background #517398
				&:hover
					background alpha(#517398, .7)
				&::after
					width 22px
					height 14px
					background-position -50px -10px
			&_fb
				background #4469B0
				&:hover
					background alpha(#4469B0, .7)
				&::after
					width 14px
					height 24px
					background-position -10px -48px
			&_ok
				background #EC8225
				&:hover
					background alpha(#EC8225, .7)
				&::after
					width 14px
					height 20px
					background-position -50px -44px
			&_tw
				background #2AA3EF
				&:hover
					background alpha(#2AA3EF, .7)
				&::after
					width 20px
					height 18px
					background-position -10px -10px