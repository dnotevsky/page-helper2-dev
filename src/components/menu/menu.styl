.menu
	position relative
	height 100vh
	min-height 900px
	background url("/images/menu_bg.png") center center no-repeat
	background-size cover
	color #fff
	&__header
		display flex
		justify-content space-between
		align-items center
		padding 36px 36px 0
	&__logos
		position relative
		display flex
		align-items center
		&::before
			content ""
			position absolute
			left 62px
			top 0
			width 1px
			height 40px
			background rgba(255,255,255,.5)
		&_postnauka
			display inline-block
			margin-right 43px
			height 40px
		&_bc
			position relative
			top 1px
			height 32px
	&__nav-link
		&_circle
			display block
			position relative
			width 40px
			height 40px
			border-radius 50%
			background #fff
			&::before,
			&::after
				display inline-block
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%)
				content ""
				background #000
			&::before
				width 19px
				height 1px
				transform translate(-50%, -50%) rotate(-45deg)
			&::after
				width 1px
				height 19px
				transform translate(-50%, -50%) rotate(-45deg)
	&__row
		margin-top 70px
		padding-left 36px
	&__left
		width 370px
		margin-right 161px
	&__description
		margin-bottom 39px
		font-size 1.25rem
		line-height 1.5
		color rgba(255,255,255,.6)
		&_cursive
			font-style italic
	&__partner
		margin-top 39px
		position relative
		&::after
			content ""
			width 100%
			height 1px
			background rgba(255,255,255,.28)
			position absolute
			left 0
			display inline-block
			top 40px
		& > a
			position relative
			display inline-block
			padding-left 23px
			font-size 1rem
			line-height 1.5
			color rgba(255,255,255,.6)
			&:first-child
				margin-bottom 33px
			&::before
				width 14px
				height 12px
				content ""
				position absolute
				left 0
				top 5px
				display inline-block
				background url("/images/start-slide-sprite.png") -92px -10px no-repeat
	&__right
		margin-top -100px
	&__title
		margin-bottom 62px
		font-size 1.5rem
		font-weight bold
		color rgba(255,255,255,.5)
	&__list
		counter-reset olCounter
		margin-left -40px
	&__li
		position relative
		padding-left 40px
		color #fff
		font-size 1.5rem
		&_active
			color #E34F2D
		&::before
			position absolute
			left 0
			top 0
			content counter(olCounter)
			counter-increment olCounter
	&__link
		margin-bottom 32px
		display inline-block
	&__meanwhile
		margin-bottom 32px
		max-width 305px
		&_text
			display block
			margin-bottom -5px
			text-transform uppercase
			font-size .75rem
			line-height 1.75
			color rgba(255,255,255,.6)
			letter-spacing 2px
		&_link
			color #fff
			font-weight bold
			font-size 1.25rem
			line-height 1.2
	&__share
		position absolute
		left 36px
		bottom 36px
		&-text
			display block
			margin-bottom 8px
			font-size 1.25rem
			color rgba(255,255,255,.6)
		&-links
			display flex
			width 164px
			justify-content space-between
			align-items center
			> a
				width 32px
				height 32px
				border-radius 9px
				position relative
				display block
				&::after
					display inline-block
					content ""
					position absolute
					top 50%
					left 50%
					transform translate(-50%, -50%)
					background-image url("/images/start-slide-sprite.png")
					background-repeat no-repeat
			&_vk
				background #517398
				&::after
					width 22px
					height 14px
					background-position -50px -10px
			&_fb
				background #4469B0
				&::after
					width 14px
					height 24px
					background-position -10px -48px
			&_ok
				background #EC8225
				&::after
					width 13px
					height 20px
					background-position -50px -44px
			&_tw
				background #2AA3EF
				&::after
					width 20px
					height 18px
					background-position -10px -10px