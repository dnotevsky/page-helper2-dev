.start
  position relative
  height 100vh
  min-height 650px
  background url("/images/start_bg.png") right top no-repeat
  background-size cover
  color #fff
  font-family "Cisco Sans", sans-serif
  @media only screen and (max-width 1023px)
    background url("/images/start_bg.png") right top no-repeat, #010101
    background-size 100%
  @media only screen and (max-width: 712px)
    min-height 470px
    background url("/images/start_bg-mob.png") right top no-repeat, #010101
    background-size 150%
  @media only screen and (max-width: 480px)
    background url("/images/start_bg-mob-2.png") center bottom no-repeat, #010101
    background-size 100%
    min-height 620px
  &__header
    display flex
    justify-content space-between
    align-items center
    padding 36px 36px 0
    @media only screen and (max-width: 712px)
      padding 36px 20px 0
    @media only screen and (max-width: 480px)
      padding 16px 16px 0
  &__logos
    position relative
    display flex
    align-items center
    &::before
      content ""
      position absolute
      left 62px
      top 0
      width 1px
      height 40px
      background rgba(255,255,255,.5)
      @media only screen and (max-width: 712px)
        left 40px
        height 30px
      @media only screen and (max-width: 480px)
        height 40px
        left 50px
    &_postnauka
      display inline-block
      margin-right 43px
      height 40px
      @media only screen and (max-width: 712px)
        height 30px
        margin-right 20px
      @media only screen and (max-width: 480px)
        height 40px
    &_bc
      position relative
      top 1px
      height 32px
      @media only screen and (max-width: 712px)
        height 30px
      @media only screen and (max-width: 480px)
        height 32px
  &__container
    height 100%
  &__text-block
    margin-top -20px
    position relative
    height calc(100% - 80px)
    max-width 680px
    display flex
    flex-direction column
    justify-content center
    padding-bottom 40px
    @media only screen and (max-width: 712px)
      max-width 480px
      margin-top 0
      height calc(100% - 56px)
      display block
      padding-top 52px
  &__title
    margin-bottom 65px
    font-size 5rem
    line-height 1
    font-family "Helios"
    font-weight 900
    @media only screen and (max-width 1023px)
      text-shadow 0 0 14px #010101
    @media only screen and (max-width: 712px)
      font-size 2.1rem
      margin-bottom 35px
    @media only screen and (max-width: 480px)
      font-size 1.5rem
      line-height 1.16
      margin-bottom 16px
      max-width 210px
  &__description
    font-size 2rem
    line-height 1.5
    @media only screen and (max-width 1023px)
      text-shadow 0 0 14px #010101
    @media only screen and (max-width: 712px)
      font-size 1rem
    @media only screen and (max-width: 480px)
      font-size 1.5rem
      text-shadow 2px 0 5px #010101
    &_cursive
      font-family "SangBleu Sunrise"
      font-style italic
      color rgba(255,255,255,.6)
  &__read-more
    position absolute
    bottom 15px
    font-size 1rem
    font-weight bold
    @media only screen and (max-width: 480px)
      bottom 32px
    &::after
      position relative
      top 2px
      display inline-block
      margin-left 7px
      content ""
      width 11px
      height 14px
      background url("/images/icons/orange-arrow.svg") center center no-repeat
