  &__nav-link
    position fixed
    right 36px
    top 36px
    display flex
    align-items center
    z-index 10
    @media only screen and (max-width 1023px)
      right 20px
    @media only screen and (max-width 767px)
      top 20px
    @media only screen and (max-width: 480px)
      width 40px
      top 16px
      right 16px
    &.above-black
      .content__nav-link_text
        color #fff
      .content__nav-link_circle
        background #fff
        &::before,
        &::after
          background #000
    &.above-fact
      .content__nav-link_text
        color #1b1a1a
      .content__nav-link_circle
        background #fff
        &::before,
        &::after
          background #000
    &_text
      margin-right 16px
      font-size 1rem
      text-align right
      color #000
      opacity .6
      @media only screen and (max-width 1023px)
        margin-right 12px
        font-size .8rem
      @media only screen and (max-width: 480px)
        display none
    &_circle
      display block
      position relative
      width 40px
      height 40px
      border-radius 50%
      background #EB663A
      transition .5s ease-in-out all
      @media only screen and (max-width 1023px)
        width 30px
        height 30px
      @media only screen and (max-width: 480px)
        width 40px
        height 40px
      &:hover
        background #fff
        &::before,
        &::after
          background #EB663A
      &::before,
      &::after
        display inline-block
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        content ""
        background #fff
        transition .5s ease-in-out all
      &::before
        width 14px
        height 1px
      &::after
        width 1px
        height 14px
  &__title
    margin-bottom 92px
    font-size 5rem
    line-height 1
    font-family "Helios"
    font-weight 900
    @media only screen and (max-width 1023px)
      margin-bottom 70px
      font-size 3.5rem
    @media only screen and (max-width 767px)
      margin-bottom 30px
      font-size 2.6rem
    @media only screen and (max-width 500px)
      font-size 1.9rem
    @media only screen and (max-width: 480px)
      font-size 1.5rem
      line-height 1.16
      margin-bottom 64px

