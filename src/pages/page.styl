/*Reset стилей*/
*
  padding 0
  margin 0
  box-sizing border-box

ul,
ol
  list-style none

a
  text-decoration none
  color inherit

button,
input,
textarea
  border none
  outline none
  background transparent

/*Общие стили*/
html
  font-size 16px
  line-height 1.25
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.wrapper
  margin 0 auto
  width 100%

.container
  width 100%
  max-width 1210px
  padding 0 20px
  margin 0 auto
  @media only screen and (max-width: 480px)
    padding 0 16px

.row
  display flex


